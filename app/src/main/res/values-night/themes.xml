<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Notes" parent="Base.Theme.Notes">
        <item name="android:colorBackground">@color/grey_800</item>
        <item name="android:navigationBarColor">@color/grey_800</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <item name="colorPrimary">@color/green_200</item>
        <item name="colorPrimaryVariant">@color/green_300</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/grey_700</item>
        <item name="colorPrimarySurface">@color/grey_700</item>

        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textColorPrimary">@color/text_color_light</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_light</item>

        <item name="colorControlNormal">?colorPrimary</item>
        <item name="colorControlActivated">?colorPrimaryDark</item>
    </style>

</resources>